<div class="w-full p-4 bg-black text-white min-h-screen flex items-center justify-center">
  <!-- Panels Layout -->
  <div class="grid grid-cols-2 gap-4">
    <%= for panel <- @page.panels |> Enum.sort(&DateTime.before?(&1.created_at, &2.created_at)) do %>
      <div class="p-2">
        <.live_component
          module={AistorybookWeb.Comps.ImgComp}
          id={"img_comp_#{panel.id}"}
          panel={panel}
        />
      </div>
    <% end %>
  </div>
</div>
